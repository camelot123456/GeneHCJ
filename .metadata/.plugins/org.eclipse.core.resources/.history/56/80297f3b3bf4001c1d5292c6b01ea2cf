spring:
  application:
    name: user-management-service
    
  datasource:
    url: jdbc:mysql://localhost:3306/user-management
    username: root
    password: mysql
    driver-class-name: com.mysql.cj.jdbc.Driver
    
  jpa:
    database-platform: org.hibernate.dialect.MySQL8Dialect
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true